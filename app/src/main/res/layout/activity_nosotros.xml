<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NosotrosActivity"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Título centrado -->
                <TextView
                    android:id="@+id/tvMenuTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Nosotros"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp"/>

                <!-- Subtítulo centrado -->
                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ROPA PARA BEBÉS"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:letterSpacing="0.12"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <!-- Intro JUSTIFICADO -->
                <TextView
                    android:id="@+id/tvIntro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wawakusi de la lengua quechua que tiene por significado niño feliz."
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:justificationMode="inter_word"
                    android:layout_marginBottom="12dp"/>

                <!-- Texto cuerpo JUSTIFICADO -->
                <TextView
                    android:id="@+id/tvBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Somos productores de ropa para bebés, de alta calidad, durabilidad y confort, inspiradas en la naturaleza y el arte ancestral peruano. Todas nuestras prendas se elaboran con algodón pima, una de las fibras más finas y suaves del mundo."
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Imagen centrada -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:id="@+id/imgPiesOverlay"
                        android:layout_width="324dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:contentDescription="Decoración pies"
                        android:elevation="8dp"
                        android:src="@drawable/pies" />

                </FrameLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
